<p id="notice"><%= notice %></p>



<table class="table table-striped">
  <thead class="thread-dark">
    <tr>
      <th>First_Name</th>
      <th>Last_Name</th>
      <th>Email_id</th>
      <th>Insta</th>
      <!--<th>Number</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      
      <tr>
        <td><%= friend.FName %></td>
        <td><%= friend.LName %></td>
        <td><%= friend.Email %></td>
        <td><%= friend.Insta %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Friend', new_friend_path, class:"btn btn-secondary" %>
