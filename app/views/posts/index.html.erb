<h1>Football STARZ!</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <br>
      
      <th>remarkss</th>
       <th>Created At</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title,post ,class: "btn btn-dark btn-sm"%></td>
        <td><%= post.body %></td>
        <td><%= post.time %></td>


        
        <% if user_signed_in? %>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-sm" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
  <br>
</table>

